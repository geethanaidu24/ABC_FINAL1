<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@color/white"

    android:orientation="vertical"
    >

    <include layout="@layout/header1"/>




    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10px"
        android:layout_gravity="center"
        android:layout_below="@+id/img1"
        android:background="@color/ddgrey" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:id="@+id/img1"
        android:layout_marginTop="130px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="CERA CLOISTER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:id="@+id/nameTxt"
        android:layout_below="@+id/img1"

        android:layout_marginTop="10dp"
        android:textColor="@color/cred"
        android:textSize="24sp" />

    <TextView
        android:text="BRANDS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nameTxt"
        android:layout_alignStart="@+id/nameTxt"
        android:layout_marginTop="50dp"
        android:id="@+id/brandview"
        android:textColor="@color/colorblack" />

    <TextView
        android:text=":"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/brandview"
        android:layout_alignEnd="@+id/nameTxt"
        android:layout_marginEnd="10dp"
        android:id="@+id/brandview1"
        android:textColor="@color/colorblack" />

    <TextView
        android:text="SIZE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brandview"
        android:layout_alignStart="@+id/brandview"
        android:layout_marginTop="20dp"
        android:id="@+id/sizeview"
        android:textColor="@color/colorblack" />

    <TextView
        android:text=":"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sizeview"
        android:layout_alignStart="@+id/brandview1"
        android:id="@+id/textView27"
        android:textColor="@color/colorblack" />

    <TextView
        android:text="400*300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView27"
        android:layout_alignStart="@+id/brandTxt"
        android:id="@+id/textView28"
        android:textColor="@color/colorblack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sizeview"
        android:layout_alignStart="@+id/sizeview"
        android:layout_marginTop="19dp"
        android:id="@+id/colorTxtview"
        android:text="COLOR"
        android:textColor="@color/colorblack" />

    <TextView
        android:text=":"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/colorTxtview"
        android:layout_alignStart="@+id/textView27"
        android:id="@+id/textView30"
        android:textColor="@color/colorblack" />

    <TextView
        android:id="@+id/colorTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView30"
        android:layout_alignStart="@+id/textView28"
        android:text="WHITE"
        android:textColor="@color/colorblack" />

    <TextView
        android:text="CERA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brandTxt"
        android:layout_alignBaseline="@+id/brandview1"
        android:layout_alignBottom="@+id/brandview1"
        android:layout_alignEnd="@+id/img1"
        android:textColor="@color/colorblack" />


</RelativeLayout>