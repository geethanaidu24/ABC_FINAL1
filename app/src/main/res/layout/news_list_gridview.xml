<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/r1newsdate">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newsDate"
android:textColor="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/user_profile_image_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/abccircle" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/r1newsdate"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/proback">
<RelativeLayout
    android:gravity="center_vertical"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/newsDate"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="5dp"
    android:id="@+id/r2"

   android:layout_marginTop="5dp"
    android:layout_marginRight="5dp" >
    <ImageView
        android:id="@+id/newsgridimg"
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:adjustViewBounds="true"
        android:background="@color/colorblack"
        android:scaleType="centerCrop"
        android:src="@drawable/pageloader"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

<RelativeLayout

    android:gravity="center_horizontal"
    android:background="@color/colorblack"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_below="@+id/r2"
    android:id="@+id/r3">

    <TextView
        android:id="@+id/newsTitle"


        android:layout_height="80dp"
        android:text="Basins"
        android:gravity="center"

        android:textColor="@android:color/white"
        android:background="@color/colorblack"
        android:layout_gravity="center"
        android:textSize="18sp"

        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:layout_width="wrap_content"   />

</RelativeLayout>
<RelativeLayout
    android:gravity="center_horizontal"
    android:background="@color/colorblack"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:id="@+id/r4"
    android:layout_below="@+id/r3"
android:layout_marginBottom="5dp"
    android:layout_height="50dp"
    android:layout_width="fill_parent">

    <Button
        android:id="@+id/newsbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
android:layout_centerInParent="true"
android:gravity="center"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:paddingBottom="2dp"
        android:background="@color/cred"
        android:text="READ MORE...."
        android:textColor="@color/white" />
</RelativeLayout>
</RelativeLayout>
</RelativeLayout>