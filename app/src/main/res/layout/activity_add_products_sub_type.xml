    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="@color/white">


        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="ADD DATA"
            android:textColor="@color/cred"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/brandimage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/textView13"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/browseimage" />

        <TextView
            android:id="@+id/brandpath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView45"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"

            android:text="Path: "
            android:textColor="@color/colorblack" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/brandpath"
            android:layout_below="@+id/brandpath"
            android:layout_marginTop="15dp"

            android:text="PRODUCTS SUB-TYPES"
            android:textColor="@color/cred"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/productsubtypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView18"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/textView18"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/colorblack" />

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            android:background="@color/cred"
            android:text="ADD"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/brandpath"
            android:layout_below="@id/textView18"
            android:layout_marginTop="15dp"
            android:text="PRODUCT-TYPES"
            android:textColor="@color/cred"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/productTypeDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView15"
            android:layout_alignStart="@+id/productsubtypes"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorblack"

            />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/brandimage"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorblack"
            android:layout_marginTop="10dp"
            android:text="Image Size Should be of highest Resolution 2160px width" />

        <!--<Spinner
            android:id="@+id/spproductstypes"
