    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="ADD DATA"
        android:textColor="@color/white"
        android:textSize="24sp"/>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"

        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/proback"
        android:fillViewport="true"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white">



            <ImageView
                android:id="@+id/image8"
                android:layout_width="match_parent"
android:layout_marginLeft="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/proback"
                android:layout_marginRight="10dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@mipmap/browseimage"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="NAME"
                android:textColor="@color/cred"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/path8"
                />

            <EditText
                android:id="@+id/name8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="textPersonName"
                android:textColor="@color/colorblack"
                android:layout_alignBottom="@+id/textView11"
                android:layout_alignLeft="@+id/brand8"
                android:layout_alignStart="@+id/brand8" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView11"
                android:layout_below="@+id/name8"
                android:layout_marginTop="15dp"
                android:text="BRAND"
                android:textColor="@color/cred"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/brand8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:textColor="@color/colorblack"
                android:layout_marginRight="20dp"
                android:inputType="textPersonName"
                android:layout_alignBottom="@+id/textView14"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView14"
                android:layout_below="@+id/textView14"
                android:layout_marginTop="15dp"
                android:text="COLOR"
                android:textColor="@color/cred"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_alignStart="@+id/textView17"
                android:layout_below="@+id/textView17"
                android:layout_marginTop="15dp"
                android:text="PRODUCT-TYPES"
                android:textColor="@color/cred"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView19"
                android:layout_below="@+id/textView19"
                android:layout_marginTop="15dp"
                android:text="PRODUCTS"
                android:textColor="@color/cred"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/color8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:textColor="@color/colorblack"
                android:inputType="textPersonName"
                android:layout_below="@+id/brand8"
                android:layout_alignLeft="@+id/brand8"
                android:layout_alignStart="@+id/brand8" />


            <Button
                android:id="@+id/btnadd8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/textView21"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/addbutton"
                android:text="ADD"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/path8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView41"
                android:textColor="@color/colorblack"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Path" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/textView21"
                android:id="@+id/protypes"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorblack"
                android:layout_toEndOf="@+id/textView19"
                android:layout_alignTop="@+id/textView19"
                android:layout_alignStart="@+id/color8" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/prodname"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorblack"
                android:layout_alignBaseline="@+id/textView21"
                android:layout_alignBottom="@+id/textView21"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/color8" />
            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/image8"

                android:layout_marginLeft="20dp"
                android:textColor="@color/colorblack"
                android:layout_marginTop="10dp"
                android:text="NOTE: Image Size Should be of highest Resolution 2160px width and 1124px height" />

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>


