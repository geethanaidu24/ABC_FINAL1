    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="ADD CONTACTS"
        android:textColor="@color/cred"
        android:textSize="24sp" />
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"

        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/proback"
        android:fillViewport="true"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"  >



            <TextView
                android:id="@+id/textView11"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@+id/image8"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="100dp"
                android:text="Branch Name"
                android:textColor="@color/cred"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginRight="20dp"
                android:inputType="textMultiLine"
                android:textColor="@color/colorblack"
                android:layout_above="@+id/textView"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView11"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Address"
                android:textColor="@color/cred"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/editText6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorblack"
                android:inputType="textPersonName"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignStart="@+id/editText2" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:background="@color/cred"
                android:text="ADD"
                android:layout_below="@+id/editText15"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/cred"
                android:textSize="18sp"
                android:text="City" />

            <EditText
                android:id="@+id/editText11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:ems="10"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorblack"
                android:inputType="textPersonName"
                android:layout_alignBaseline="@+id/textView31"
                android:layout_alignBottom="@+id/textView31"
                android:layout_alignStart="@+id/editText6" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Contact Number"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/cred"
                android:textSize="18sp"
                android:layout_below="@+id/textView31"
                android:id="@+id/textView34" />
            <EditText
                android:id="@+id/editText12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorblack"
                android:ems="10"
                android:inputType="phone"
                android:layout_alignBottom="@+id/textView34"
                android:layout_alignStart="@+id/editText11" />
            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/cred"
                android:textSize="18sp"

                android:layout_below="@+id/textView34"
                android:text="Email-ID" />

            <EditText
                android:id="@+id/editText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorblack"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_alignBaseline="@+id/textView39"
                android:layout_alignBottom="@+id/textView39"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/cred"
                android:textSize="18sp"
                android:layout_below="@+id/textView39"
                android:text="Working Time" />

            <EditText
                android:id="@+id/editText15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_alignBottom="@+id/textView40"
                android:layout_alignStart="@+id/editText14" />

        </RelativeLayout>
    </ScrollView>



