    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:typeface="normal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:lineSpacingExtra="8sp"
        android:fontFamily="sans-serif" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"

        android:layout_marginLeft="8dp"

        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/proback"
        android:elevation="2dp"
        android:fillViewport="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="40dp"
                android:text="Please Select only one....."
                android:textColor="@color/cred"
                android:textSize="18sp" />

            <Button
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp"
                android:background="@drawable/addbutton"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:text="Add Product Types"
                android:textColor="@color/white"
                android:layout_below="@+id/textView16"
                android:layout_alignEnd="@+id/textView16"
                android:layout_marginEnd="18dp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/b1"
                android:layout_below="@+id/b1"
                android:layout_marginTop="30dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="@drawable/addbutton"
                android:text=" Add Product sizes"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/b1"
                android:layout_marginBottom="14dp"
                android:layout_marginEnd="10dp"
                android:textSize="20sp"
                android:textColor="@color/cred"
                android:layout_toStartOf="@+id/b1"
                android:text="1." />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/b2"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/b1"
                android:textSize="20sp"
                android:textColor="@color/cred"
                android:text="2." />


        </RelativeLayout>

    </ScrollView>
</LinearLayout>