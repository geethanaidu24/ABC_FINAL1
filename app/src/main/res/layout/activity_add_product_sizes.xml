    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="ADD SIZES"
        android:layout_below="@+id/toolbar"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/proback"
        android:fillViewport="true"
        android:layout_marginBottom="10dp"

        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="@color/white">



        <Button
            android:id="@+id/productsizes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/textView38"
            android:background="@drawable/addbutton"
            android:text="ADD"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

       android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Enter Width"
            android:textColor="@color/cred"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/width1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"


            android:textColor="@color/colorblack"
            android:ems="8"
            android:textSize="18sp"
            android:inputType="textPersonName"
            android:layout_alignBottom="@+id/textView35"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="22dp" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView35"
            android:layout_below="@+id/width1"
            android:layout_marginTop="15dp"
            android:textColor="@color/cred"
            android:textSize="18sp"
            android:text="Enter Height"/>

        <EditText
            android:id="@+id/height1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:textSize="18sp"
            android:layout_marginRight="20dp"


            android:textColor="@color/colorblack"
            android:inputType="textPersonName"
            android:layout_below="@+id/width1"
            android:layout_alignStart="@+id/width1"/>

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView36"
            android:layout_below="@+id/height1"
            android:layout_marginTop="15dp"
            android:textColor="@color/cred"
            android:textSize="18sp"
            android:text="Enter Length"/>

        <EditText
            android:id="@+id/length1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/height1"
            android:layout_below="@+id/height1"
            android:layout_marginRight="20dp"
            android:ems="8"
            android:inputType="textPersonName"
            android:text="0"

            android:textColor="@color/colorblack"

            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView37"
            android:layout_below="@+id/length1"
            android:layout_marginTop="15dp"
            android:text="Products "
            android:textColor="@color/cred"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/productsTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView38"

            android:layout_alignStart="@+id/length1"
            android:layout_marginRight="20dp"


            android:textColor="@color/colorblack"

            android:textSize="18sp"/>

        <!--<Spinner
            android:id="@+id/productsspinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView38"
            android:layout_alignEnd="@+id/length1"
            android:layout_alignStart="@+id/length1"
            android:textColor="@color/cred"
            android:textSize="18sp"/>-->


    </RelativeLayout>
</ScrollView>
</LinearLayout>
