    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="ADD DATA"
            android:textColor="@color/cred"
            android:textSize="24sp"/>

        <ImageView
            android:id="@+id/newsimage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/textView13"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            app:srcCompat="@mipmap/browseimage"/>

        <TextView
            android:id="@+id/newspath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:layout_marginTop="24dp"
            android:text="Path: "
            android:textColor="@color/colorblack"

            android:layout_below="@+id/newsimage"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/newspath"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="News Title"
            android:textColor="@color/cred"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/colorblack"
            android:layout_marginRight="20dp"
            android:inputType="textPersonName"
            android:layout_alignBaseline="@+id/textView18"
            android:layout_alignBottom="@+id/textView18"
            android:layout_alignStart="@+id/textView13" />

        <Button
            android:id="@+id/newsbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="@color/cred"
            android:text="ADD"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView18"
            android:layout_below="@+id/news"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textColor="@color/cred"
            android:text="Description" />

        <EditText
            android:id="@+id/descptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/news"
            android:layout_below="@+id/news"
            android:ems="10"
            android:inputType="textMultiLine"
            android:textColor="@color/colorblack" />


    </RelativeLayout>

</LinearLayout>
