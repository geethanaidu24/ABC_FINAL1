    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="ADD DATA"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/proback"
        android:fillViewport="true"
        android:layout_marginBottom="10dp"

        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <ImageView
            android:id="@+id/newsimage"
            android:layout_width="fill_parent"
            android:layout_height="150dp"

            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/proback"
            android:layout_marginRight="10dp"

            android:layout_marginTop="10dp"
            app:srcCompat="@mipmap/browseimage" />

        <TextView
            android:id="@+id/newspath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_below="@+id/textView43"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"

            android:text="Path: "
            android:textColor="@color/colorblack" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/newspath"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="News Title"
            android:textColor="@color/cred"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:ems="8"
            android:inputType="textPersonName"
            android:textColor="@color/colorblack"
            android:layout_alignBaseline="@+id/textView18"
            android:layout_alignBottom="@+id/textView18"
            android:layout_alignEnd="@+id/newsimage"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/newsbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/textView23"
            android:background="@color/cred"
            android:text="ADD"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView18"
            android:layout_below="@+id/news"
            android:layout_marginTop="15dp"
            android:text="Description"
            android:textColor="@color/cred"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/descptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/news"
            android:layout_below="@+id/news"
            android:ems="8"
            android:inputType="textMultiLine"
            android:textColor="@color/colorblack" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/newsimage"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="NOTE: Image Size Should be of highest Resolution 2160px width and 1124px height"
            android:textColor="@color/colorblack" />


    </RelativeLayout>
</ScrollView>
</LinearLayout>
