<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"

              android:layout_height="match_parent"


              tools:context=".MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cred"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="7dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            app:srcCompat="@mipmap/abctextlogo"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="ADD Sizes"
            android:textColor="@color/cred"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/brandbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            android:background="@color/cred"
            android:text="ADD"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView13"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:text="Enter Width"
            android:textColor="@color/cred"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/width1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView35"
            android:layout_alignStart="@+id/brandbtn"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:textColor="@color/cred"
            android:textSize="18sp"
            android:inputType="textPersonName"/>

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView35"
            android:layout_below="@+id/width1"
            android:layout_marginTop="15dp"
            android:textColor="@color/cred"
            android:textSize="18sp"
            android:text="Enter Height"/>

        <EditText
            android:id="@+id/height1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/cred"
            android:textSize="18sp"
            android:inputType="textPersonName"
            android:layout_below="@+id/width1"
            android:layout_alignStart="@+id/width1"/>

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView36"
            android:layout_below="@+id/height1"
            android:layout_marginTop="15dp"
            android:textColor="@color/cred"
            android:textSize="18sp"
            android:text="Enter Length"/>

        <EditText
            android:id="@+id/length1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/height1"
            android:layout_below="@+id/height1"
            android:ems="10"
            android:textColor="@color/cred"
            android:textSize="18sp"
            android:text="0"
            android:inputType="textPersonName"
            />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView37"
            android:layout_below="@+id/length1"
            android:layout_marginTop="15dp"
            android:text="Products Types"
            android:textColor="@color/cred"
            android:textSize="18sp"/>

        <Spinner
            android:id="@+id/productsspinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView38"
            android:layout_alignEnd="@+id/length1"
            android:layout_alignStart="@+id/length1"
            android:textColor="@color/cred"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView38"
            android:layout_below="@+id/textView38"
            android:layout_marginTop="15dp"
            android:text="Products"
            android:textColor="@color/cred"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView12"
            android:textColor="@color/cred"
            android:textSize="18sp"
            android:layout_alignEnd="@+id/productsspinner"
            android:layout_toEndOf="@+id/textView38"/>


    </RelativeLayout>

</LinearLayout>
