    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="ADD SIZES"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp" />
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/proback"
        android:fillViewport="true"
        android:layout_marginBottom="10dp"


        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="@color/white">




        <Button
            android:id="@+id/brandbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView12"
            android:background="@drawable/addbutton"
            android:text="ADD"
            android:layout_marginTop="40dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:text="Enter Width"
            android:textColor="@color/cred"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/width1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView35"
            android:layout_alignStart="@+id/brandbtn"
            android:layout_marginRight="20dp"

            android:ems="10"
            android:inputType="number"
            android:textColor="@color/colorblack"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView35"
            android:layout_below="@+id/width1"
            android:layout_marginTop="15dp"
            android:text="Enter Height"
            android:textColor="@color/cred"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/height1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/width1"
            android:layout_below="@+id/width1"
            android:layout_marginRight="20dp"
            android:ems="10"

            android:inputType="number"
            android:textColor="@color/colorblack"

            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView36"
            android:layout_below="@+id/height1"
            android:layout_marginTop="15dp"
            android:text="Enter Length"
            android:textColor="@color/cred"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/length1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/height1"
            android:layout_below="@+id/height1"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:inputType="number"
            android:text="0"

            android:textColor="@color/colorblack"

            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/textView37"
            android:layout_below="@+id/length1"
            android:layout_marginTop="15dp"
            android:text="Products-Types"
            android:textColor="@color/cred"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/protypeDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView38"
            android:layout_alignBottom="@+id/textView38"

            android:layout_alignStart="@+id/length1"

            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/textView38"

            android:textColor="@color/colorblack"
            android:textSize="18sp" />

        <!--<Spinner
            android:id="@+id/productsspinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView38"
            android:layout_alignEnd="@+id/length1"
            android:layout_alignStart="@+id/length1"
            android:textColor="@color/cred"
            android:textSize="18sp"/>-->

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView38"
            android:layout_below="@+id/textView38"
            android:layout_marginTop="15dp"
            android:text="Products"
            android:textColor="@color/cred"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/proDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView12"
            android:layout_alignBottom="@+id/textView12"
            android:layout_alignStart="@+id/protypeDisplay"

            android:layout_marginRight="20dp"
            android:textColor="@color/colorblack"

            android:textSize="18sp" />

        <!--<Spinner
            android:id="@+id/spinner8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView12"
            android:textColor="@color/cred"
            android:textSize="18sp"
            android:layout_alignEnd="@+id/productsspinner"
            android:layout_toEndOf="@+id/textView38"/>
-->

    </RelativeLayout>
</ScrollView>
</LinearLayout>
