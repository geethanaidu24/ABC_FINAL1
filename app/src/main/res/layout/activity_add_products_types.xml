    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="ADD DATA"
        android:layout_gravity="center"
        android:layout_below="@+id/toolbar"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/proback"
        android:fillViewport="true"
        android:layout_marginBottom="10dp"


        android:layout_below="@+id/textView13"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@color/white">



            <ImageView
                android:id="@+id/brandimage"
                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:layout_centerHorizontal="true"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/proback"
                android:layout_marginRight="10dp"

                android:layout_marginTop="10dp"
     app:srcCompat="@mipmap/browseimage" />

            <TextView
                android:id="@+id/brandpath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView46"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Path: "
                android:textColor="@color/colorblack" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/brandpath"
                android:layout_below="@+id/brandpath"
                android:layout_marginTop="15dp"
                android:text="PRODUCT-TYPES"
                android:textColor="@color/cred"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/producttypes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:ems="8"

                android:inputType="textPersonName"
                android:textColor="@color/colorblack"
                android:layout_marginEnd="16dp"
                android:layout_alignTop="@+id/textView18"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginTop="50dp"
                android:layout_below="@+id/textView15"
                android:layout_centerHorizontal="true"

                android:background="@drawable/addbutton"
                android:text="ADD"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/brandpath"
                android:layout_below="@id/textView18"
                android:layout_marginTop="10dp"
                android:text="PRODUCTS "
                android:textColor="@color/cred"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView15"
                android:layout_alignStart="@+id/producttypes"

                android:layout_marginRight="20dp"
                android:textColor="@color/colorblack" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/brandimage"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="NOTE: Image Size Should be of highest Resolution 2160px width and 1124px height"
                android:textColor="@color/colorblack" />

            <!-- <Spinner
             android:id="@+id/addProSp"

             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignTop="@+id/textView15"
             android:layout_toEndOf="@+id/textView15"

             />-->


        </RelativeLayout>
    </ScrollView>
</LinearLayout>